{
  "name": "kysely-gen",
  "version": "0.1.1",
  "description": "Modern PostgreSQL type generator for Kysely - Built with Bun and TDD",
  "type": "module",
  "license": "MIT",
  "author": "kysely-gen contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/elitan/kysely-gen.git"
  },
  "bugs": {
    "url": "https://github.com/elitan/kysely-gen/issues"
  },
  "homepage": "https://github.com/elitan/kysely-gen#readme",
  "keywords": [
    "kysely",
    "postgres",
    "postgresql",
    "typescript",
    "codegen",
    "typegen",
    "type-generator",
    "database",
    "sql"
  ],
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "bin": {
    "kysely-gen": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:integration": "docker compose up -d && bun test --timeout 10000 && docker compose down",
    "dev": "bun run src/cli.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "kysely": "^0.27.4",
    "micromatch": "^4.0.8",
    "ora": "^9.0.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12",
    "@types/micromatch": "^4.0.10",
    "@types/pg": "^8.11.10",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "kysely": ">=0.27.0 <1.0.0",
    "pg": ">=8.8.0 <9.0.0"
  }
}
